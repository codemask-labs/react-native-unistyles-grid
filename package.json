{
    "name": "react-native-unistyles-grid",
    "version": "3.0.0-beta.2",
    "type": "module",
    "author": "codemask-labs",
    "homepage": "https://github.com/codemask-labs/react-native-unistyles-grid",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/codemask-labs/react-native-unistyles-grid.git"
    },
    "publishConfig": {
        "access": "public",
        "ignore": [
            "dist/*.map*"
        ]
    },
    "keywords": [
        "react-native",
        "react-native-web",
        "layout",
        "unistyles",
        "layout",
        "ui",
        "grid",
        "typescript"
    ],
    "react-native": "./dist/native.cjs",
    "main": "./dist/index.cjs",
    "exports": {
        ".": {
            "react-native": {
                "default": "./dist/native.cjs"
            },
            "module": "./dist/index.mjs",
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            },
            "default": "./dist/index.cjs"
        }
    },
    "scripts": {
        "build": "unbuild",
        "format": "dprint fmt",
        "format-check": "dprint check",
        "lint": "eslint src",
        "typecheck": "tsc --noEmit",
        "prepare": "husky",
        "precommit": "concurrently 'bun lint' 'bun typecheck' 'bun format-check'"
    },
    "files": [
        "dist"
    ],
    "peerDependencies": {
        "react-native": ">=0.70.0",
        "react": ">=18.0.0",
        "react-native-unistyles": "3.0.0-rc.1"
    },
    "devDependencies": {
        "react-native-nitro-modules": "0.25.2",
        "react-native-web": "0.20.0",
        "typescript": "5.8.3",
        "dprint": "0.49.1",
        "unbuild": "3.5.0",
        "@types/node": "22.14.1",
        "@types/react": "18.3.12",
        "husky": "9.1.7",
        "concurrently": "9.1.2",
        "eslint": "9.24.0",
        "eslint-config-codemask": "2.1.3"
    }
}
